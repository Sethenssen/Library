<hr />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th><%= t('books.title') %></th>
      <th><%= t('books.author') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to t('show'), book, class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to t('edit'), edit_book_path(book), class: 'btn btn-mini btn-warning' %></td>
        <td><%= link_to t('destroy'), book, method: :delete, data: { confirm: t('destroy_confirmation') }, class: 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div><%= paginate @books, :outer_window => 1, :window => 2 %></div>

<br>

<%= link_to t('books.new'), new_book_path, class: 'btn btn-success' %>